<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/themeColor</item>
        <item name="colorControlActivated">@color/themeColor</item>
        <item name="colorControlHighlight">@color/themeColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/welcome</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="EditScreenTextInputLayoutStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/hint</item>
        <item name="colorControlActivated">@color/welcome</item>
        <item name="colorControlHighlight">@color/welcome</item>
    </style>
    <style name="CheckboxStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/welcome</item>  // for checked
        <item name="android:textColorSecondary">@color/welcome</item>  // for unchecked
    </style>
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
